alias viam='vim ~/Pragad/Amazon/Team/AmazonLearnings.txt'
alias vimrc='vim ~/.vimrc'
alias bashrc='vim ~/.bashrc'

alias srcbashrc='echo "source ~/.bashrc" ; source ~/.bashrc'
alias srcvimrc='source ~/.vimrc'

